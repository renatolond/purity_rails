<div class="page-header">
    <h1>Forgot your password?</h1>
    <p>We'll send password reset instructions.</p>
    <%= devise_error_messages! %>
</div>
<div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
        <div class="form-group">
            <%= f.label :email, class: "control-label" %>
            <%= f.email_field :email, :autofocus => true, class: 'form-control input-lg' %>
        </div>
        <%= f.submit 'Reset Password', :class => 'btn btn-block btn-lg btn-primary btn-loading', :data => { loading: "Sending..." }  %>
    <% end %>
</div>
